{
  "title": "Retry",
  "description": "Run `lambda` up to `tries` (default 5) times, appending prior attempts and error messages to the prompt.",
  "version": "0.0.1",
  "edges": [
    {
      "from": "parameters",
      "to": "lambda-completion",
      "constant": true,
      "out": "lambda",
      "in": "board"
    },
    {
      "from": "parameters",
      "to": "countdown",
      "out": "tries",
      "in": "tries"
    },
    {
      "from": "countdown",
      "to": "countdown",
      "out": "tries",
      "in": "tries"
    },
    {
      "from": "parameters",
      "to": "retry-prompt",
      "out": "text",
      "in": "text"
    },
    {
      "from": "retry-prompt",
      "to": "retry-prompt",
      "out": "prompt",
      "in": "text"
    },
    {
      "from": "parameters",
      "to": "lambda-completion",
      "out": "text",
      "in": "text"
    },
    {
      "from": "lambda-completion",
      "to": "output-success",
      "out": "*"
    },
    {
      "from": "lambda-completion",
      "to": "countdown",
      "out": "$error",
      "in": "data"
    },
    {
      "from": "countdown",
      "to": "output-error",
      "out": "done",
      "in": "$error"
    },
    {
      "from": "countdown",
      "to": "error-parser",
      "out": "data",
      "in": "json"
    },
    {
      "from": "error-parser",
      "to": "retry-prompt",
      "out": "error",
      "in": "error"
    },
    {
      "from": "error-parser",
      "to": "retry-prompt",
      "out": "completion",
      "in": "completion"
    },
    {
      "from": "retry-prompt",
      "to": "lambda-completion",
      "out": "prompt",
      "in": "text"
    }
  ],
  "nodes": [
    {
      "id": "parameters",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Original",
              "description": "The original prompt"
            },
            "tries": {
              "type": "number",
              "title": "Tries",
              "description": "The number of tries to attempt to fix the problem",
              "default": "5"
            },
            "lambda": {
              "type": "BoardCapability",
              "title": "Lambda",
              "description": "The lambda to retry. This value can't be entered in the Web UI."
            }
          },
          "required": [
            "prompt",
            "completion"
          ]
        }
      }
    },
    {
      "id": "output-success",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "additionalProperties": true
          },
          "description": "The output of the lambda"
        }
      }
    },
    {
      "id": "output-error",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "$error": {
              "type": "object"
            }
          }
        }
      }
    },
    {
      "id": "lambda-completion",
      "type": "invoke"
    },
    {
      "id": "countdown",
      "type": "jsonata",
      "configuration": {
        "expression": "{ \"tries\": tries - 1, (tries > 0 ? \"data\" : \"done\") : data }",
        "tries": 5,
        "raw": true
      }
    },
    {
      "id": "error-parser",
      "type": "jsonata",
      "configuration": {
        "expression": "{ \"error\": $exists(error.stack) ? error.stack : error.message, \"completion\": inputs.completion }",
        "raw": true
      }
    },
    {
      "id": "retry-prompt",
      "type": "promptTemplate",
      "configuration": {
        "template": "{{text}}{{completion}}\n\nThis error occured:\n{{error}}\n\nPlease try again:\n"
      }
    }
  ],
  "kits": [
    {
      "url": "npm:@google-labs/llm-starter"
    },
    {
      "url": "npm:@google-labs/core-kit"
    }
  ]
}