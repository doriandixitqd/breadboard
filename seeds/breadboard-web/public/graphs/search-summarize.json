{
  "title": "New: The Search Summarizer Recipe (as a chain with input and output)",
  "description": "A simple AI pattern that first uses Google Search to find relevant bits of information and then summarizes them using LLM.",
  "version": "0.0.2",
  "edges": [
    {
      "from": "palm-generateText-15",
      "to": "output-16",
      "out": "completion",
      "in": "text"
    },
    {
      "from": "summarizing-template",
      "to": "palm-generateText-15",
      "out": "prompt",
      "in": "text"
    },
    {
      "from": "secrets-14",
      "to": "palm-generateText-15",
      "out": "PALM_KEY",
      "in": "PALM_KEY"
    },
    {
      "from": "input",
      "to": "urlTemplate-11",
      "out": "text",
      "in": "query"
    },
    {
      "from": "input",
      "to": "summarizing-template",
      "out": "text",
      "in": "question"
    },
    {
      "from": "jsonata-13",
      "to": "summarizing-template",
      "out": "result",
      "in": "context"
    },
    {
      "from": "urlTemplate-11",
      "to": "fetch-12",
      "out": "url",
      "in": "url"
    },
    {
      "from": "fetch-12",
      "to": "jsonata-13",
      "out": "response",
      "in": "json"
    },
    {
      "from": "secrets-9",
      "to": "urlTemplate-11",
      "out": "API_KEY",
      "in": "API_KEY"
    },
    {
      "from": "secrets-10",
      "to": "urlTemplate-11",
      "out": "GOOGLE_CSE_ID",
      "in": "GOOGLE_CSE_ID"
    }
  ],
  "nodes": [
    {
      "id": "output-16",
      "type": "output",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Answer",
              "description": "The answer to the query"
            }
          },
          "required": [
            "text"
          ]
        }
      }
    },
    {
      "id": "palm-generateText-15",
      "type": "palm-generateText",
      "configuration": {}
    },
    {
      "id": "summarizing-template",
      "type": "promptTemplate",
      "configuration": {
        "template": "Use context below to answer this question:\n\n##Question:\n{{question}}\n\n## Context {{context}}\n\\n## Answer:\n"
      }
    },
    {
      "id": "secrets-14",
      "type": "secrets",
      "configuration": {
        "keys": [
          "PALM_KEY"
        ]
      }
    },
    {
      "id": "input",
      "type": "input",
      "configuration": {
        "schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Query",
              "description": "What would you like to search for?"
            }
          },
          "required": [
            "text"
          ]
        }
      }
    },
    {
      "id": "jsonata-13",
      "type": "jsonata",
      "configuration": {
        "expression": "$join(items.snippet, '\n')"
      }
    },
    {
      "id": "urlTemplate-11",
      "type": "urlTemplate",
      "configuration": {
        "template": "https://www.googleapis.com/customsearch/v1?key={API_KEY}&cx={GOOGLE_CSE_ID}&q={query}"
      }
    },
    {
      "id": "fetch-12",
      "type": "fetch",
      "configuration": {}
    },
    {
      "id": "secrets-9",
      "type": "secrets",
      "configuration": {
        "keys": [
          "API_KEY"
        ]
      }
    },
    {
      "id": "secrets-10",
      "type": "secrets",
      "configuration": {
        "keys": [
          "GOOGLE_CSE_ID"
        ]
      }
    }
  ],
  "graphs": {}
}