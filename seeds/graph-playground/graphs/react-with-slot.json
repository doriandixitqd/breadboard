{
  "edges": [
    {
      "from": "get-graph",
      "out": "graph",
      "to": "get-tools",
      "in": "json"
    },
    {
      "from": "get-graph",
      "out": "graph",
      "to": "get-tool-descriptions",
      "in": "json"
    },
    {
      "from": "get-tools",
      "out": "result",
      "to": "react-template",
      "in": "tools"
    },
    {
      "from": "get-tool-descriptions",
      "out": "result",
      "to": "react-template",
      "in": "descriptions"
    },
    {
      "from": "ask-user",
      "out": "text",
      "to": "pass",
      "in": "text",
      "optional": true
    },
    {
      "from": "pass",
      "out": "text",
      "to": "remember-question",
      "in": "Question",
      "optional": true
    },
    {
      "from": "remember-question",
      "out": "context",
      "to": "react-template",
      "in": "memory"
    },
    {
      "from": "pass",
      "to": "get-graph"
    },
    {
      "from": "react-template",
      "out": "prompt",
      "to": "react-completion",
      "in": "text"
    },
    {
      "from": "react-completion",
      "out": "completion",
      "to": "parse-completion",
      "in": "json"
    },
    {
      "from": "react-completion",
      "out": "completion",
      "to": "remember-thought",
      "in": "Thought"
    },
    {
      "from": "parse-completion",
      "out": "*",
      "to": "tools-slot"
    },
    {
      "from": "tools-slot",
      "out": "text",
      "to": "remember-observation",
      "in": "Observation"
    },
    {
      "from": "remember-observation",
      "to": "pass"
    },
    {
      "from": "parse-completion",
      "out": "answer",
      "to": "last-print",
      "in": "text"
    }
  ],
  "nodes": [
    {
      "id": "react-template",
      "type": "prompt-template",
      "configuration": {
        "template": "Answer the following questions as best you can. You have access to the following tools:\n\n{{descriptions}}\n\nUse the following format:\n\nQuestion: the input question you must answer\nThought: you should always think about what to do\nAction: the action to take, should be one of: {{tools}}\nAction Input: the input to the action\nObservation: the result of the action\n... (this Thought/Action/Action Input/Observation can repeat N times)\nThought: I now know the final answer\nFinal Answer: the final answer to the original input question\n\nBegin!\n\n{{memory}}\nThought:",
        "memory": ""
      }
    },
    {
      "id": "ask-user",
      "type": "input",
      "configuration": {
        "message": "What is the question you want to answer?"
      }
    },
    {
      "id": "react-completion",
      "type": "text-completion",
      "configuration": {
        "stop-sequences": ["\nObservation"]
      }
    },
    {
      "id": "get-graph",
      "type": "slot",
      "configuration": { "slot": "tools", "graph": true }
    },
    {
      "id": "get-tools",
      "type": "jsonata",
      "configuration": {
        "expression": "nodes.configuration.description.%.%.[id] ~> $join(', ')"
      }
    },
    {
      "id": "get-tool-descriptions",
      "type": "jsonata",
      "configuration": {
        "expression": "nodes.configuration.description.%.%.[id &  ': ' & configuration.description] ~> $join('\n')"
      }
    },
    {
      "id": "parse-completion",
      "type": "jsonata",
      "configuration": {
        "expression": "($f := function($line, $str) { $contains($line, $str) ? $substring($line, $length($str)) }; $merge(($split('\n')[[1..2]]) @ $line.$.{'action': $f($line, 'Action: '), 'input': $f($line, 'Action Input: '),'answer': $f($line, 'Final Answer: ') }).{ action: input,'answer': answer})",
        "raw": true
      }
    },
    { "id": "last-print", "type": "output" },
    { "id": "pass", "type": "passthrough" },
    { "id": "remember-question", "type": "local-memory" },
    { "id": "remember-observation", "type": "local-memory" },
    { "id": "remember-thought", "type": "local-memory" },
    { "id": "tools-slot", "type": "slot", "configuration": { "slot": "tools" } }
  ]
}
